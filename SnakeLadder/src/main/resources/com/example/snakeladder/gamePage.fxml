<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.snakeladder.gamePageController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <ImageView fitHeight="500" fitWidth="500" layoutX="300" layoutY="0" >
            <image>
                <Image url = "@GameBoard.jpg"/>
            </image>
        </ImageView>

        <ImageView fitHeight="50" fitWidth="20" layoutX="20" layoutY="290" >
            <image>
                <Image url = "@redplay.png"/>
            </image>
        </ImageView>

        <Text layoutX="100" layoutY="320"  > Player 1 Turn</Text>

        <ImageView fitHeight="50" fitWidth="20" layoutX="20" layoutY="350" >
            <image>
                <Image url = "@blueplay.png"/>
            </image>
        </ImageView>

        <Text layoutX="100" layoutY="380"  > Player 2 Turn</Text>

    <ImageView fx:id ="player1" fitHeight="50" fitWidth="20" layoutX="280" layoutY="450" >
        <image>
            <Image url = "@redplay.png"/>
        </image>
    </ImageView>

    <ImageView fx:id="player2" fitHeight="50" fitWidth="20" layoutX="260" layoutY="450" >
        <image>
            <Image url = "@blueplay.png"/>
        </image>
    </ImageView>

        <Text fx:id ="turnname" layoutX="120" layoutY="150"  > Player 1 Turn</Text>

        <ImageView fitHeight="50" fitWidth="50" layoutX="150" layoutY="200" onMouseClicked="#rolldice" >
            <image>
                <Image url = "@dice.png"/>
            </image>
        </ImageView>

        <Text fx:id ="number" layoutX="170" layoutY="280"></Text>

    </children>

</AnchorPane>
